#New file with revised user interface
<UserInterface>:
    orientation:"vertical"
    BaseTitleBar:
        id:basetitlebar
        root_screen:root_screen
        nav_drw:nav_drw
        md_list:md_list

    MDNavigationLayout:
        ScreenManager:
            id: root_screen
            md_list:md_list
            Log_in_screen:
                basetitlebar:basetitlebar
                root_screen: root_screen
                name: "Log_in_Screen"
                on_pre_enter: basetitlebar.set_elements(root_screen.current)
            New_user:
                basetitlebar:basetitlebar
                root_screen: root_screen
                name: 'new_user'
                on_pre_enter: basetitlebar.set_elements(root_screen.current)
            Edit_user:
                basetitlebar:basetitlebar
                root_screen: root_screen
                name: 'edit_user'
                on_pre_enter: basetitlebar.set_elements(root_screen.current)
            Logged_in_interface:
                basetitlebar:basetitlebar
                root_screen: root_screen
                name:'Logged_in_interface'
                on_pre_enter: basetitlebar.set_elements(root_screen.current)
        MDNavigationDrawer:
            id:nav_drw
            BoxLayout:
                orientation: "vertical"
                padding: "8dp"
                spacing: "8dp"
                ScrollView:
                    NavDrawerContent:
                        id: md_list
