<Log_in_screen>:
    BoxLayout:
        orientation: "vertical"
        MDCard:
            size_hint: None,None
            size: 300,400
            pos_hint:{'center_x':0.5,'center_y':0.5}
            elevation: 30
            spacing: 20
            orientation: 'vertical'
            Image:
                id:image_logo
                source:"Logo.png"
                size_hint: 0.4,0.4
                pos_hint:{'center_x':0.5,'center_y':0.5}
            UI_MDtextfieldRound:
                id: Username_input
                size_hint_x: None
                width:200
                pos_hint:{'center_x':0.5,'center_y':0.5}
                hint_text: "Username"
                icon_right: "account"
            UI_MDtextfieldRound:
                id: Password_input
                size_hint_x: None
                width:200
                pos_hint:{'center_x':0.5,'center_y':0.5}
                hint_text: "Password"
                icon_right: "key-variant"
                password: True
            MDRoundFlatButton:
                id: SubmitButton
                pos_hint: {'center_x':0.5,'center_y':0.5}
                text:"[u]Submit[/u]"
                size_hint_x:None
                width: 200
                on_release: app.Log_in(Username_input.text,Password_input.text)#root.root_screen.current = 'Logged_in_interface'
            MDRoundFlatButton:
                id: New_user
                pos_hint: {'center_x':0.5,'center_y':0.5}
                text:"[u]New_User[/u]"
                size_hint_x:None
                width: 200
                on_release: root.root_screen.current = 'new_user'
            MDLabel:
                id: info_label
                pos_hint: {'center_x':0.5,'center_y':0.5}
                size_hint_y:None
                halign:'center'
                font_size: 14
                height:50
        MDLabel:
            size_hint_y: None
            height: 50