<Log_in_screen>:
    BoxLayout:
        orientation: "vertical"
        MDCard:
            size_hint: None,None
            size: 300,400
            pos_hint:{'center_x':0.5,'center_y':0.5}
            elevation: 30
            spacing: 20
            orientation: 'vertical'
            Image:
                id:image_logo
                source:"Logo.png"
                size_hint: 0.4,0.4
                pos_hint:{'center_x':0.5,'center_y':0.5}
            MDTextFieldRound:
                id: Username_input
                size_hint_x: None
                width:200
                pos_hint:{'center_x':0.5,'center_y':0.5}
                multiline:False
                write_tab: False
                hint_text: "Username"
                icon_right: "account"
            MDTextFieldRound:
                id: Password_input
                size_hint_x: None
                width:200
                pos_hint:{'center_x':0.5,'center_y':0.5}
                multiline: False
                write_tab: False
                hint_text: "Password"
                icon_right: "key-variant"
                password: True
            MDRoundFlatButton:
                id: SubmitButton
                pos_hint: {'center_x':0.5,'center_y':0.5}
                text:"[u]Submit[/u]"
                size_hint_x:None
                width: 200
                on_release: app.Log_in(Username_input.text,Password_input.text)
            MDLabel:
                id: info_label
                pos_hint: {'center_x':0.5,'center_y':0.5}
                size_hint_y:None
                halign:'center'
                font_size: 14
                height:100
        MDLabel:
            size_hint_y: None
            height: 50