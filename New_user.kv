<New_user>:
    MDCard:
        id: new_user_card
        size_hint: None,None
        size: 500,400
        pos_hint:{'center_x':0.5,'center_y':0.5}
        elevation: 30
        spacing: 20
        orientation: 'vertical'
        MDLabel:
            id: new_user_title
            pos_hint: {'center_x':0.5,'center_y':0.5}
            halign: 'center'
            size_hint_y:None
            height:50
            text: 'New User creation'
        GridLayout:
            cols: 2
            MDLabel:
                text: 'Nome'
            UI_textfield:
                id: Nome_input
                md_bg_color:"light"
                helper_text_mode: "on_error"
                helper_text: "Field required"
                required: 'True'
            MDLabel:
                text: 'Cognome'
            UI_textfield:
                id: Congnome_input
                helper_text_mode: "on_error"
                helper_text: "Field required"
                required: 'True'
            MDLabel:
                text: 'Username'
            UI_textfield:
                id: Username_input
                helper_text_mode: "on_error"
                helper_text: "Field required"
                required: 'True'
            MDLabel:
                text: 'Password'
            UI_textfield:
                id: New_password_input
                helper_text_mode: "on_error"
                helper_text: "Field required"
                required: 'True'
            MDLabel:
                text: 'Confirm Password'
            UI_textfield:
                id: New_password_confirm
                helper_text_mode: "on_error"
                helper_text: "Field required"
                required: 'True'

        MDLabel:
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_y:None
            height:50
        MDRoundFlatButton:
            id: User_creation
            pos_hint: {'center_x':0.5,'center_y':0.5}
            text:"[u]Register[/u]"
            size_hint_x:None
            width: 200
            on_release: app.add_user
        MDLabel:
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_y:None
            height:2